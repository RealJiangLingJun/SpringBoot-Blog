<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- tag -->
<mapper namespace="com.jiangjiawei.dao.TagMapper">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="tagMap" type="com.jiangjiawei.domain.Tag">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="tag_state" property="tagState" jdbcType="INTEGER" />
        <result column="blog_count" property="blogCount" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        t.id, t.name, t.tag_state, t.blog_count, t.create_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有数据 -->
    <select id="findTagAll" resultMap="tagMap">
        SELECT
        <include refid="allColumns" />
        FROM tag t
    </select>
    
    <!-- 根据条件参数查询数据列表 -->
    <select id="findTagByCondition" resultMap="tagMap" parameterType="map">
        SELECT
        <include refid="allColumns" />
        FROM tag t WHERE 1 = 1
        <if test="name != null and name != ''">
            AND t.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="blogCount != null">
            AND t.blog_count = #{blogCount},
        </if>
        <if test="createTime != null">
            AND t.create_time = #{createTime},
        </if>
        <if test="tagState != null">
            AND t.tag_state = #{tagState}
        </if>
    </select>
    
    <!-- 根据主键查询数据 -->
    <select id="findTagByIds" resultMap="tagMap" parameterType="list">
        SELECT
        <include refid="allColumns" />
        FROM tag t WHERE t.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    
    <!-- 插入数据 -->
    <insert id="insertTag" parameterType="com.jiangjiawei.domain.Tag">
        INSERT INTO tag (
            id, name, tag_state, blog_count, create_time
        ) VALUES (
            #{id},
            #{name},
            #{tagState},
            #{blogCount},
            #{createTime}
        )
    </insert>
    
    <!-- 修改数据 -->
    <update id="updateTag" parameterType="com.jiangjiawei.domain.Tag">
        UPDATE tag
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="tagState != null">
                tag_state = #{tagState},
            </if>
            <if test="blogCount != null">
                blog_count = #{blogCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!--获取标签中博客数量前 几个 的标签展示在首页中-->
    <select id="getTopTags" parameterType="int" resultMap="tagMap">
        select * from tag where tag_state = 1 order by blog_count desc limit 0,#{number};
    </select>

</mapper>